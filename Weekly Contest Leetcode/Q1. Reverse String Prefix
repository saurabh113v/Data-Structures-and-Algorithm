class Solution {
    public String reversePrefix(String s, int k) {
        char[] arr = s.toCharArray();
        
        int left = 0;
        int right = k - 1;
        
        // Reverse first k characters
        while (left < right) {
            char temp = arr[left];
            arr[left] = arr[right];
            arr[right] = temp;
            left++;
            right--;
        }
        
        // Convert back to string
        return new String(arr);
    }
}Â©leetcode
